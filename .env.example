# Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Stripe Payment
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# PayPal Payment
VITE_PAYPAL_CLIENT_ID=AYourPayPalSandboxClientID

# Bank Transfer Details
VITE_BANK_NAME=Sierra Leone Commercial Bank
VITE_BANK_ACCOUNT_NAME=OCSLAA Mental Health Initiative
VITE_BANK_ACCOUNT_NUMBER=1234567890
VITE_BANK_SWIFT_CODE=SLCBSLF1

# Google Maps (for location services)
VITE_GOOGLE_MAPS_API_KEY=your_maps_key_here

# Email Service (Resend)
# Backend API URL (for email sending)
# Development: http://localhost:3000
# Production: https://your-backend-domain.com
VITE_API_URL=http://localhost:3000

# Email Configuration
VITE_EMAIL_FROM=OCSLAA <onboarding@resend.dev>
VITE_EMAIL_REPLY_TO=info@ocslaa.org

# Admin Email Addresses by Department
VITE_ADMIN_EMAIL_GENERAL=info@ocslaa.org
VITE_ADMIN_EMAIL_SUPPORT=support@ocslaa.org
VITE_ADMIN_EMAIL_VOLUNTEER=volunteer@ocslaa.org
VITE_ADMIN_EMAIL_PARTNERSHIPS=partnerships@ocslaa.org
VITE_ADMIN_EMAIL_MEDIA=media@ocslaa.org

# Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_PLAUSIBLE_DOMAIN=yourdomain.com

# Error Tracking (Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# Sanity CMS Configuration
# Get these values from https://sanity.io/manage after creating your project
VITE_SANITY_PROJECT_ID=your-project-id
VITE_SANITY_DATASET=production

# Feature Flags
VITE_ENABLE_CHAT=false
VITE_ENABLE_COMMENTS=false
VITE_ENABLE_USER_ACCOUNTS=false

# Environment Mode
# development = Email simulation (console logs only, no backend needed)
# production = Real emails sent via backend API (requires VITE_API_URL)
VITE_ENV=production
